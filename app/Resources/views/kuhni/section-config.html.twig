<div id="podbor-config"></div>
<section class="bg-light" id="portfolio">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Кухни по конфигурации</h2>
                <h3 class="section-subheading text-muted">Подбор кухонь по форме.</h3>
            </div>
        </div>
        <div class="row">
            {% for config in config %}
                {% if loop.index0 < 4 %}
                    <div class="col-md-3 col-sm-6 portfolio-item">
                        <div class="portfolio-link">
                            <a href="{{ path('kuhni_parameters', {'slug' : config.slug}) }}">
                                <img class="img-fluid" src="{{ asset( imageConfig[loop.index0] ) }}" alt="{{ config.keywords }}" title="{{ config.title }}">
                            </a>
                        </div>
                        <div class="portfolio-caption">
                            <h4>{{ config.title }}</h4>
                            <p class="text-muted">Всегда в тренде</p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <div id="collapse-kitchentype" class="collapse">
            <div class="row">
                {% for config in config %}
                    {% if loop.index0 >= 4 %}
                        <div class="col-md-3 col-sm-6 portfolio-item">
                            <div class="portfolio-link">
                                <a href="{{ path('kuhni_parameters', {'slug' : config.slug}) }}">
                                    <img class="img-fluid" src="{{ asset( imageConfig[loop.index0] ) }}" alt="{{ config.keywords }}" title="{{ config.title }}">
                                </a>
                            </div>
                            <div class="portfolio-caption">
                                <h4>{{ config.title }}</h4>
                                <p class="text-muted">Всегда в тренде</p>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

        {% if countConfig > 0 %}
            <div class="text-center">
                <a data-toggle="collapse" data-target="#collapse-kitchentype">Показать/скрыть еще ({{ countConfig }}) конфигурации</a>
            </div>
        {% endif %}

    </div>
</section>