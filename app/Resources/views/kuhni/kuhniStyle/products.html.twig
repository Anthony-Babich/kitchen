<div id="podbor-style"></div>
<section class="bg-light" id="portfolio">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Кухни по стилю</h2>
                <h3 class="section-subheading text-muted">Посмотрите кухни по стилю.</h3>
            </div>
        </div>
        <div class="row">
            {% for kitchen in kitchens %}
                <div class="col-md-3 col-sm-6 portfolio-item">
                    <div class="portfolio-link">
                        <a href="{{ path('kuhni_product', {'slugStyle' : slug, 'nameproduct' : kitchen.slug}) }}">
                            <img class="img-fluid" src="{{ asset( image[loop.index0] ) }}" alt="{{ kitchen.keywords }}" title="{{ kitchen.title }}">
                        </a>
                    </div>
                    <div class="portfolio-caption">
                        <h4>{{ kitchen.title }}</h4>
                        <p class="text-muted">Всегда в тренде</p>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
</section>