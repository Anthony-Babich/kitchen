<section class="bg-light" id="portfolio">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Кухни по цвету</h2>
                <h3 class="section-subheading text-muted">Подбор кухонь по цвету/оттенку.</h3>
            </div>
        </div>
        <div class="row">
            {% for color in color %}
            <div class="col-xs-4 col-sm-3 col-md-2 col-lg-2 portfolio-item">
                <div class="portfolio-caption" style="background-color: {{ color.color }};">
                    <p class="text-muted">{{ color.title }}</p>
                </div>
            </div>
            {% endfor %}
        </div>

    </div>
</section>