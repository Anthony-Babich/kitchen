<div id="podbor-style"></div>
<section class="bg-light" id="portfolio">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Кухни по стилю</h2>
                <h3 class="section-subheading text-muted">Посмотрите кухни по стилю.</h3>
            </div>
        </div>
        <div class="row">
            {% for style in style %}
                {% if loop.index0 < 4 %}
                    <div class="col-md-3 col-sm-6 portfolio-item">
                        <div class="portfolio-link" data-toggle="modal" href="#portfolioModal4">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content">
                                    <i class="fa fa-plus fa-3x"></i>
                                </div>
                            </div>
                            <img class="img-fluid" src="{{ asset( imageStyle[loop.index0] ) }}" alt="{{ style.keywords }}" title="{{ style.title }}">
                        </div>
                        <div class="portfolio-caption">
                            <h4>{{ style.title }}</h4>
                            <p class="text-muted">Всегда в тренде</p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <div id="collapse-kitchenstyle" class="collapse">
            <div class="row">
                {% for style in style %}
                    {% if loop.index0 >= 4 %}
                        <div class="col-md-3 col-sm-6 portfolio-item">
                            <div class="portfolio-link" data-toggle="modal" href="#portfolioModal4">
                                <div class="portfolio-hover">
                                    <div class="portfolio-hover-content">
                                        <i class="fa fa-plus fa-3x"></i>
                                    </div>
                                </div>
                                <img class="img-fluid" src="{{ asset( imageStyle[loop.index0] ) }}" alt="{{ style.keywords }}" title="{{ style.title }}">
                            </div>
                            <div class="portfolio-caption">
                                <h4>{{ style.title }}</h4>
                                <p class="text-muted">Всегда в тренде</p>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

        <div class="text-center">
            <a data-toggle="collapse" data-target="#collapse-kitchenstyle">Показать/скрыть еще (6) стилей</a>
        </div>

    </div>
</section>