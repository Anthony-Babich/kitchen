<div class="modal fade" id="modal-material" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLabel">Кухни по материалу</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    {% for materialModal in materialModal %}
                        {% if loop.index0 < 4 %}
                            <div class="col-md-3 col-sm-6 portfolio-item">
                                <div class="portfolio-link">
                                    <a href="{{ path('kuhni_parameters', {'slug' : materialModal.slug}) }}">
                                        <img class="img-fluid" src="{{ asset( imageMaterialModal[loop.index0] ) }}" alt="{{ materialModal.keywords }}" title="{{ materialModal.title }}">
                                    </a>
                                </div>
                                <div class="portfolio-caption">
                                    <h4>{{ materialModal.title }}</h4>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div id="collapse-kitchenmaterial" class="collapse">
                    <div class="row">
                        {% for materialModal in materialModal %}
                            {% if loop.index0 >= 4 %}
                                <div class="col-md-3 col-sm-6 portfolio-item">
                                    <div class="portfolio-link">
                                        <a href="{{  path('kuhni_parameters', {'slug' : materialModal.slug}) }}">
                                            <img class="img-fluid" src="{{ asset( imageMaterialModal[loop.index0] ) }}" alt="{{ materialModal.keywords }}" title="{{ materialModal.title }}">
                                        </a>
                                    </div>
                                    <div class="portfolio-caption">
                                        <h4>{{ materialModal.title }}</h4>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>

                {% if countMaterialModal > 0 %}
                    <div class="text-center">
                        <a data-toggle="collapse" data-target="#collapse-kitchenmaterial">Показать/скрыть еще ({{ countMaterialModal }}) стилей</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>