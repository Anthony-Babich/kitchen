<section id="product">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xl-8 text-center">
                <div class="fotorama" data-width="100%" data-nav-inside="true">
                    {% for image in images %}
                        <img src="{{ asset(image) }}">
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-12 col-xl-4" id="description">
                <div class="row title">
                    <div class="col-12">
                        <h3 class="text-left">{{ kitchen.title }}</h3>
                    </div>
                </div>
                <div class="row description">
                    <div class="col-12">
                        <p>{{ kitchen.description }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 price text-center">
                        <p class="head">цена со скидкой</p>
                        <p class="active">от {{ kitchen.price }} руб</p>
                    </div>
                    <div class="col-4 price text-center">
                        <p class="head active">скидка</p>
                        <div class="procent active">
                            <span>{{ kitchen.discount }}%</span>
                        </div>
                        <a href="#">Смотреть акцию <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
                    </div>
                    <div class="col-4 price text-center">
                        <p class="head">цена</p>
                        <p><s>{{ kitchen.noDiscountPrice }} руб</s></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-left">
                        <div class="static-description">
                            {% if kitchen.fixedPrice %}
                                <p>*Цена указана за 1 метр погонный кухни</p>
                            {% else %}
                                <p>*Цену и наличие уточняйте</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        <button class="btn btn-xl" data-toggle="modal" data-target="#freedesignproject">Бесплатный дизайн-проект кухни</button>
                    </div>
                </div>
                <div class="row text-center static-icons">
                    <div class="col-4">
                        <p><img src="{{ asset('/web/bundles/kuhni/img/productiontime.png') }}" alt="Срок изготовления"></p>
                        <p class="desc">Срок изготовления от 15 дней</p>
                    </div>
                    <div class="col-4">
                        <p><img src="{{ asset('/web/bundles/kuhni/img/guarantee.png') }}" alt="Гарантии"></p>
                        <p class="desc">2 года гарантии на кухню</p>
                    </div>
                    <div class="col-4">
                        <p><img src="{{ asset('/web/bundles/kuhni/img/delivery.png') }}" alt="Бесплатная доставка"></p>
                        <p class="desc">Бесплатная доставка по Москве и Московской области</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>