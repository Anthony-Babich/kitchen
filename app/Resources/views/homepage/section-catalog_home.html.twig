<section id="catalog-home">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">ОФИЦИАЛЬНЫЙ КАТАЛОГ ЗОВ</h2>
                <h3 class="section-subheading text-muted">Наш главный каталог.</h3>
            </div>
        </div>
    </div>
    <div class="setka clearfix">
        <div class="half fl">
            {% for catalog in catalog %}
                {% if loop.first %}
                    <a href="{{ path('kuhni_list') }}" class="item big">
                    <span class="pos">
                        <span class="first-name">{{ catalog.name }}</span>
                        <span class="first-style">{{ catalog.title }}</span>
                    </span>
                        <img src="{{ asset( image[loop.index0] ) }}" class="bg" alt="{{ catalog.alt }}" title="{{ catalog.alt }}">
                    </a>
                {% endif %}
            {% endfor %}
        </div>
        <div class="half fr">
            {% for catalog in catalog %}
                {% if not loop.first %}
                    <a href="{{ path('kuhni_list') }}" class="item small">
                        <span class="pos">
                            <span class="name">{{ catalog.name }}</span>
                            <span class="style">{{ catalog.title }}</span>
                        </span>
                        <img src="{{ asset( image[loop.index0] ) }}" class="bg" alt="{{ catalog.alt }}" title="{{ catalog.alt }}">
                    </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>